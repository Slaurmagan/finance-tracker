<% if params[:action] == 'search' %>
  <div class="results-block">
    <%= bootstrap_flash %>
  </div>
<% end %>
<% if @stock %>
  <div class="well results-block">
    <strong>Symbol: <%= @stock.ticker %></strong>
    <br>
    <strong>Name: <%= @stock.name %></strong>
    <br>
    <strong>Price: <%= @stock.last_price %></strong><br>
    <% if current_user.can_add_stock?(@stock.ticker) %>
      <%= link_to 'Add to my stocks',user_stocks_path(user: current_user, stock_ticker: @stock.ticker),class: "btn btn-xs btn-success" ,method: :post %>
    <% else %>
      <span class="label label-default">
        Stock cannot be added because you have already added
        <% if !current_user.under_stock_limit? %>
          10 stocks
        <% end %>
        <% if current_user.already_added?(@stock.ticker)  %>
          this stock
        <% end %>
      </span>
    <% end %>

  </div>
<% end %>
